                @Html.ValidationMessageFor(model => model.BracoDireito.Pulso.Posicao, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Posição do cotovelo direito</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.BracoDireito.Cotovelo.Posicao, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BracoDireito.Cotovelo.Posicao, "", new { @class = "text-danger" })
